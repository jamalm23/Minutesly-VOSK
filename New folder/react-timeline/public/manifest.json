{
  "manifest_version": 3,
  "name": "Meeting Memory Timeline",
  "description": "An interactive timeline for your meeting recordings.",
  "version": "0.1.0",
  "permissions": [
    "storage",
    "tabs",
    "scripting"
  ],
  "action": {
    "default_popup": "index.html"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "web_accessible_resources": [
    {
      "resources": ["*.png"],
      "matches": ["<all_urls>"]
    }
  ]
}